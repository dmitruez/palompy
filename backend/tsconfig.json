{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "config/**/*.ts", "routes/**/*.ts", "services/**/*.ts", "models/**/*.ts", "utils/**/*.ts"],
  "ts-node": {
    "files": true
  }
}
